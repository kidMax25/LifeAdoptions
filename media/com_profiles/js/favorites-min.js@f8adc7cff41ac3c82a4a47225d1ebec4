jQuery(document).ready((function(a){a(document).on("click","a.add_fav",(function(){var e=a(this).data("fav");a.post("/index.php",{option:"com_profiles",tmpl:"component",task:"profiles.addFavorite",id:e},(function(e){"success"==e.type?(a(".heart_fav").addClass("rm_fav").removeClass("add_fav"),a(".favorites-bubble").text("Added to favorites!").fadeIn(100,(function(){a(".favorites-bubble").delay(2e3).fadeOut(250)}))):a(".heart_fav").addClass("rm_fav").removeClass("add_fav")}),"json")})),a(document).on("click","a.rm_fav",(function(){var e=a(this).data("fav");a.post("/index.php",{option:"com_profiles",tmpl:"component",task:"profiles.delFavorite",id:e},(function(e){"success"==e.type?(a(".heart_fav").addClass("add_fav").removeClass("rm_fav"),a(".favorites-bubble").text("Removed from favorites!").fadeIn(100,(function(){a(".favorites-bubble").delay(2e3).fadeOut(250)}))):a(".heart_fav").addClass("add_fav").removeClass("rm_fav")}),"json")}))}));